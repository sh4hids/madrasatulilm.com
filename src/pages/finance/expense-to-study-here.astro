---
import { Image } from 'astro:assets';
import BaseLayout from '@/layouts/BaseLayout.astro';
import Text from '@/components/Text.astro';
import PageHeader from '@/components/PageHeader.astro';
import mapImage from '@/assets/images/map.jpeg';
---

<BaseLayout meta={{ title: 'যোগাযোগ' }}>
    <PageHeader
        title="যোগাযোগ"
        breadcrumbItems={[
            {
                url: '/',
                label: 'নীড়পাতা',
            },
            {
                url: '/contact',
                label: 'যোগাযোগ',
                isCurrentPage: true,
            },
        ]}
    />
    <div
        class="mx-auto grid max-w-3xl grid-cols-2 gap-4 px-4 pt-6 pb-16 lg:px-0"
    >
        <div>
            <Text variant="h5">বালক শাখা ও অফিস</Text>
            <Text>
                ২১৯/৪/খ, ভিপি রোড, দক্ষিণ পীরেরবাগ (৬০ ফিট ভাঙ্গাব্রীজ সংলগ্ন),
                ঢাকা-১২১৬
            </Text>
            <Text variant="h5">বালিকা শাখা</Text>
            <Text>
                ২৪৬/১/বি-৫/১, পশ্চিম আগারগাঁও (৬০ ফিট ভাঙ্গাব্রীজ ও ৬ তলা
                গার্মেন্টস সংলগ্ন), ঢাকা-১২০৭
            </Text>
            <Text variant="h5"
                >মোবাইল: <a href="tel:+8801914-723676">01914-723676</a></Text
            >
            <Text variant="h5"
                >ইমেইল: <a href="mailto:madrasatulilm.contact@gmail.com"
                    >madrasatulilm.contact@gmail.com</a
                ></Text
            >
        </div>
        <div>
            <Image src={mapImage} class="h-auto w-full" alt="address-map" />
        </div>
    </div>
</BaseLayout>
