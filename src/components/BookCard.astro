---
import { Image } from 'astro:assets';
import BookInfo from './BookInfo';
import Text from './Text.astro';

interface Props {
    bookInfo: {
        name: string;
        slug: string;
        image: string;
        description: string;
        prices: {
            hardCover?: string;
            paperback?: string;
        };
    };
}

const {
    bookInfo: { name, slug, image, description, prices },
} = Astro.props;
---

<div
    class="flex flex-col overflow-hidden rounded-md border-1 border-x border-b border-x-(--pattern-fg) bg-[image:repeating-linear-gradient(315deg,_var(--pattern-fg)_0,_var(--pattern-fg)_1px,_transparent_0,_transparent_50%)] bg-[size:10px_10px] bg-fixed [--pattern-fg:var(--color-gray-950)]/5 dark:[--pattern-fg:var(--color-white)]/10"
>
    <a
        href={`/finance/business-of-madrassa/library/${slug}`}
        target={slug.startsWith('https://') ? '_blank' : '_self'}
    >
        <div class="flex h-40 items-center justify-center overflow-hidden">
            <Image
                src={`/images/${image}`}
                class="h-full w-auto"
                alt="বরই ফুলের মধু"
                width="100"
                height="100"
            />
        </div>
        <div class="bg-accent/72 p-4">
            <BookInfo client:load name={name} description={description} />
        </div>
    </a>
</div>
